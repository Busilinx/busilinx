  if ( WORK_WITH_KSHOW ) {
    return '[kaltura-widget kid="'. $node->kaltura_entryId .'" size="large"  width="'. $width .'" height="'. $height .'" /]';
  }
  else {
    return '[kaltura-widget mix="'. $node->kaltura_entryId .'" size="large"  width="'. $width .'" height="'. $height .'" /]';
  }
